        	//关闭modal
        	function closeModal(){
        		$(".modal").remove();
        	};

        	//添加分类
        	$("#addType").click(function() {

        		//"添加分类"HTML
        		var panelContent = 
        		"<div class='modal is-active'>"+
        			"<div class='modal-background'></div>"+
        			"<div class='modal-card'>"+
        				"<header class='modal-card-head'>"+
        					"<p class='modal-card-title'>添加分类</p>"+
        					"<button class='delete closeModal' aria-label='close'></button>"+
        				"</header>"+
        				"<section class='modal-card-body'>"+
        					"<input class='input' type='text' id='typeName' placeholder='分类名'>"+
        				"</section>"+
        				"<footer class='modal-card-foot'>"+
        					"<button class='button is-success' id='addTypeAjax'>添加</button>"+
        					"<button class='button closeModal'>取消</button>"+
        				"</footer>"+
        			"</div>"+
        		"</div>";
        		//显示"添加分类"
        		$("body").append(panelContent);
        		//input默认选中
        		$("#typeName").focus();
        		//关闭按钮事件
        		$(".closeModal").click(function() {
        			closeModal()
        		});
        		//添加按钮
        		$("#addTypeAjax").click(function() {
        			var typeName = $("#typeName").val();
        			if(typeName==""){
        				//显示taost，提示不能为空
			            $.lDialog.iconToast({
			                title: '分类名不能为空',
			                icon: 'error',
			                duration: 2000
			            })
        			}else {
        				//显示sLoadingToast
			            $.lDialog.sLoadingToast({
			                title: '加载中',
			                theme:'default'
			            })
        				$.ajax({
							url: '/article/addArticleType',
							type: 'POST',
							data: {
								typeName:typeName
							}
						})
        				.done(function(res) {
        					$.lDialog.hLoadingToast(); //关闭加载框
        					if(res==201){
        						//分类已经存在
					            $.lDialog.iconToast({
					                title: '分类已经存在',
					                icon: 'error',
					                duration: 2000
					            })
        					}else if(res==200) {
        						//分类已经存在
					            $.lDialog.iconToast({
					                title: '添加成功',
					                icon: 'success',
					                duration: 2000
					            })
					            //关闭modal
					            setTimeout(function(){
					                closeModal();
					            },2000)
					            
        					}else {
        						//分类已经存在
					            $.lDialog.iconToast({
					                title: '没知错误,请联系管理员',
					                icon: 'error',
					                duration: 2000
					            })
        					}
        				})
        				.fail(function(res) {
        					console.log(res);
        				})
        				
        			}
        		});
        	});
        });	
	</script>
